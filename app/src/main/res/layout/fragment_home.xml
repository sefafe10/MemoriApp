<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    >

    <ImageButton
        android:layout_marginTop="100dp"
        android:id="@+id/reloj"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:scaleType="centerInside"
        android:src="@drawable/reloj"
        app:layout_constraintEnd_toStartOf="@id/microfono"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@android:color/transparent"/>

    <ImageButton
        android:layout_marginTop="100dp"
        android:id="@+id/microfono"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:scaleType="centerInside"
        android:src="@drawable/microfono"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/reloj"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@android:color/transparent"
        />

    <ImageButton
        android:id="@+id/libreta_de_contactos"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:scaleType="centerInside"
        android:src="@drawable/libreta_de_contactos"
        app:layout_constraintTop_toBottomOf="@id/reloj"
        app:layout_constraintBottom_toTopOf="@id/calendario"
        app:layout_constraintEnd_toStartOf="@id/camara"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="@android:color/transparent"/>

    <ImageButton
        android:id="@+id/camara"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:scaleType="centerInside"
        android:src="@drawable/camara"
        app:layout_constraintBottom_toTopOf="@id/sos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/libreta_de_contactos"
        app:layout_constraintTop_toBottomOf="@id/microfono"
        android:backgroundTint="@android:color/transparent"/>

    <ImageButton
        android:id="@+id/calendario"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:scaleType="centerInside"
        android:src="@drawable/calendario"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/sos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/libreta_de_contactos"
        android:backgroundTint="@android:color/transparent"/>

    <ImageButton
        android:id="@+id/sos"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:scaleType="centerInside"
        android:src="@drawable/sos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/calendario"
        app:layout_constraintTop_toBottomOf="@id/camara"
        android:backgroundTint="@android:color/transparent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
